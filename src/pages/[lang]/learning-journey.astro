---
import LearningJourneyPage from '../../components/LearningJourneyPage.astro';
import { defaultLocale, SUPPORTED_LOCALES, type Locale } from '../../i18n/translations';

export function getStaticPaths() {
	return SUPPORTED_LOCALES.map((lang) => ({
		params: { lang },
	}));
}

const requestedLang = Astro.params.lang;
const locale: Locale = SUPPORTED_LOCALES.includes(requestedLang as Locale) ? (requestedLang as Locale) : defaultLocale;
---

<LearningJourneyPage locale={locale} />
